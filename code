from telegram.ext import Updater, CommandHandler

def start(update, context):
    update.message.reply_text("Welcome! I can help you scrape data. Use /scrape to begin.")

def scrape(update, context):
    # Call your scraping function here
    data = scrape_data_from_website()
    update.message.reply_text(f"Here is the data: {data}")

updater = Updater(7062172769:AAGqzrXLj975xqqIMacXsS4NIjs5NOdBGxQ, use_context=True)
dispatcher = updater.dispatcher

dispatcher.add_handler(CommandHandler("start", start))
dispatcher.add_handler(CommandHandler("scrape", scrape))

updater.start_polling()
updater.idle()
